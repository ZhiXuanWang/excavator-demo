<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>



    <!-- consumer of HelloServiceClient -->
    <bean id="helloServiceClient" class="com.googlecode.excavator.demo.client.HelloServiceClient">
        <property name="helloService">
            <bean class="com.googlecode.excavator.spring.ExcavatorConsumerSpringFactoryBean" lazy-init="false">
                <property name="targetInterface"
                          value="com.googlecode.excavator.demo.common.service.HelloService"/>
                <property name="group" value="DEFAULT"/>
                <property name="version" value="1.0.0-test"/>
                <property name="defaultTimeout" value="60000"/>
            </bean>
        </property>
    </bean>

    <!-- provider of HelloService -->
    <bean class="com.googlecode.excavator.spring.ExcavatorProviderSpringFactoryBean" lazy-init="false">
        <property name="targetInterface"
                  value="com.googlecode.excavator.demo.common.service.HelloService"/>
        <property name="targetObject">
            <bean class="com.googlecode.excavator.demo.core.service.impl.HelloServiceImpl"/>
        </property>
        <property name="group" value="DEFAULT"/>
        <property name="version" value="1.0.0-test"/>
        <property name="defaultTimeout" value="60000"/>
    </bean>





</beans>